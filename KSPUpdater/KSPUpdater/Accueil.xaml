<Window x:Class="KSPUpdater.Accueil"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KSPUpdater"
        mc:Ignorable="d"
        Title="Accueil" Height="450" Width="800">
    <Grid Margin="20,20,20,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Content="Selectionner Dossier" Height="50" VerticalAlignment="Top"/>
        <Button Grid.Row="1" Content="Update" Height="50" VerticalAlignment="Top" Margin="0,10,0,0" Click="Update_OnClick"/>
    </Grid>
</Window>
